<h2><%= @snippet.title.titleize %></h2>

<% if @snippet_category == :markdown %>
  <%= markdown(@snippet.work) %>
<% else %>
  <%= CodeRay.scan(@snippet.work, @snippet_category).div(line_numbers: false).html_safe %>
<% end %>
<!-- <p>Created by: <%#= @snippet.user.first_name if @snippet.user %> <%#= @snippet.user.last_name if @snippet.user %> </p> -->

<%= link_to "Edit", edit_snippet_path(@snippet) %>
<%= link_to "Delete", snippet_path(@snippet),
                      method: :delete,
                      data:   {confirm: "Are you sure?"} %>
